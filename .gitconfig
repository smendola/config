[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[mergetool "diffmerge"]
	cmd = diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
	trustExitCode = true


[difftool "winmerge"]
	cmd = git-winmerge-wrapper.sh \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
[mergetool "winmerge"]
	cmd = git-winmerge-wrapper.sh \"$REMOTE\" \"$LOCAL\" \"$BASE\" \"$MERGED\"
	trustExitCode = false

[diff]
	tool = winmerge
[merge]
	tool = diffmerge

