function prat() { 
    if [[ $TERM == emacs ]]; then
        return;
    fi;

    PRAT=$*;
    local attr_list='0';
#    local attr_list2='0;31;47;7'
    local attr_list2='41'
    local shlvl;
    local title;
    local prompt;
    local remote;

    for attr in $*;
    do
        attr_list="$attr_list;$attr";
    done;

    if [[ $SHLVL > 1 ]]; then
        shlvl=" [$SHLVL]";
    fi
    if [[ ! -z $SSH_CONNECTION ]]
    then
        remote=" [REMOTE]"
    fi

    prompt="\n\[\033[${attr_list}m\] \h: \w \[\033[${attr_list2}m\]\$(curbranch_bracketed)$shlvl$remote\[\033[0m\] \n\$ ";
    PS1=$prompt
}


