#!/bin/bash

excl () {
  echo "--exclude-dir" $1 | sed 's/,/ --exclude-dir /g'
}

SHOW=-l
INCLUDE=('*')
EXCLUDE=('')

# Process the options
while getopts :x:dc! OPTNAME
do
    case $OPTNAME in
    \?)  GREPOPT="$GREPOPT -$OPTARG" ;;
    # Regular options:
    x)    EXCLUDE+=$OPTARG ;;
    d)    SHOW= ;;
    c)    SHOW=-c ;;
    *)    choke
    esac
done
shift $(( $OPTIND - 1 ))

# Treat .foo as *.foo
# X prefix required because () not allowed as case label
case "X${2}" in
    (X)    ;;
    (X.*)  INCLUDE+="*${2}"
    (X*)   INCLUDE+=${2}
esac

set -x
/usr/bin/rgrep $GREPOPT --color=AUTO --include $INCLUDE --exclude $EXCLUDE "$1" $SHOW .
