#!/bin/sh

# Convert all args to Windows paths and then invoke
# Windows based editor program with those args.
# Add double quotes around each file name; that's how
# Windows works

declare -a args
for arg
do
     args[${#args[*]}]=$(cygpath -wa "$arg")
done

case "${0##*/}" in
    npp)     ( notepad++.exe "${args[@]}" &);;
    sublime) ( sublime_text  "${args[@]}" &) ;;
esac
