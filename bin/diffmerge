#!/bin/bash
# support non-cygwin use of git
type cygpath > /dev/null 2>&1 || alias cygpath=dummy-cygpath

declare -a args
for arg
do
    # convert -option to /option
    if [[ $arg = --* ]]
    then
        arg="/${arg#--}"
    elif [[ $arg = /* ]]
    then
        arg="$(cygpath -m "$arg")"
    fi
	args[${#args[*]}]=$arg
done
exec /c/Progra~1/SourceGear/Common/DiffMerge/sgdm.exe "${args[@]}"
