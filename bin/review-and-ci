#!/bin/bash

source "${0%/*}/functions.sh"

ar () {
	accurev "$@"
}

run () {
	local f=$1; shift
	eval echo "$@"
}

mods () {
	local opt
	local els
	case "$1" in
		(-[ao]) opt=--outgoing
			shift ;;
		(-d) opt=-d
			shift ;;
		(*) opt=-m  ;;
	esac
	if [[ $# = 0 ]]
	then
		set .
	fi
	ar stat $opt -R -fl "${@}"
}

review () {
	local ans yn f=$1
	ar diff "$f" #2>/dev/null
	while true; do
		#echo "|"
		read -n1 -p ">> Keep, Purge, Skip, Review, or Quit (k/p/s/r/q) [s]: " ans
		echo ""

		case ${ans} in
			(k*)
			    ar keep $f;
			    break
			    ;;
			(p*)
				#echo "|"
				read -n1 -p ">> Really purge ${f##*/}? (y/n) [n]: " yn
				echo ""

				if [[ $yn = y* ]]; then
					ar purge $f
					break
				fi
			    ;;
			(r*)
				review "$f"
				break
				;;

			(s* | "")
			    echo "Skipped."
			    return
			    ;;

			(q*)
			    exit
			    ;;
		    (!*)
		    	run "$f" ${ans#!}
		    	;;
			(*)
			    echo "$(style red)Huh?$(style normal)"
			    ;;
		esac
	done
}

go () {
	local f ans files=$(mods "$@")

	if [[ ! -z "$files" ]]; then
		echo '------------------------------------------------------'
		echo "Reviewing:"
		echo '------------------------------------------------------'
		for f in $files; do echo "  - $(style yellow)${f}$(style normal)"; done
		echo ""

		for f in $files; do
			echo '------------------------------------------------------'
			echo "$(style bold)${f#/./}$(style normal)"
			echo '------------------------------------------------------'
			while true; do
				#echo "|"
				read -n1 -p ">> Review, Skip, or Quit (r/s/q) [r]: " ans
				echo ""

				case ${ans} in
					(s*)
					    echo "Skipped";
					    break
					    ;;
					(r* | "")
					    review "$f";
					    break
					    ;;

				    (!*)
				    	run "$f" ${ans#!}
				    	break
				    	;;
					(q*)
					    echo "Quit"
					    exit
					    ;;
					(*)
			    		echo "$(style red)Huh?$(style normal)"
					    ;;
				esac
			done
			echo ""
		done

		echo "$(style green)Finished.$(style normal)"
		echo "TODO: option to promote"
	else
		echo "No pending changes to review."
	fi
}

go "$@"
